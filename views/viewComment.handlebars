<div id="home">
    <div id="post-container">
    <div id="post-header">
        <h1>{{post.title}}</h1>
        <span id="post-date">Posted by {{post.user.username}} on {{format_date post.updated_at}}</span>
    </div>
    <div id="post-body">{{post.body}}</div>
</div>

{{#each comments as |comment|}}
<div id="post-container">
    <div id="post-header"></div>
    <div id="post-body">
        <p>{{comment.body}}</p>     
        <p>-{{comment.user.username}}, {{format_date comment.updated_at}}</p>
    </div>
</div>
{{/each}}
</div>