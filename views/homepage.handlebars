<div id="home">
    {{#each posts as |post| }}
<div id="post-container">
    
    <div id="post-header">
        <h1>{{post.title}}</h1>
        <span id="post-date">Posted by {{post.user.username}} on {{format_date post.created_at}}</span>
    </div>
    <div id="post-body">{{post.body}}</div>
    <div class="comment-links">
        <a href="/comment/new/{{post.id}}" class="comment-link">Add Comment</a>
        <a href="/comment/view/{{post.id}}" class="comment-link">View Comments</a>
    </div>
    
</div>
{{/each}}
</div>